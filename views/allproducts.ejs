<%include ./partials/header.ejs%>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rudra,s App</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/profile.css">
</head>

<body>
    <div style="display: flex; justify-content: space-between;" id="container">

        <%allUsersproduct.forEach(function(elem){%>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=elem.name%>
                        <!-- hellow -->
                    </h5>
                    <h5 class="card-title">
                        <%=elem.price%>
                    </h5>
                    <h6>Sold by : <%= elem.userid.username%>
                    </h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's
                        content.</p>
    
                    <%if(elem.userid.username===user.username){%>
                        <a href="#" class="btn btn-warning">edit</a>
                        <a href="#" class="btn btn-danger">delete</a>
    
                        <%} else{%>
                            <% if(user.cart.indexOf(elem.id) !==-1){ %>
                                <small style="color: green;">Already in card</small><br><br>
                                <a href="/remove/cart/<%=elem.id%>" class="btn btn-danger">Remove from cart</a>
                            <%}else{%>
                               <a href="/cart/<%=elem.id%>" class="btn btn-success">Boy Now</a>
                            <%}%>
                    <%}%>
                </div>
            </div>
            <%})%>   
        </div>
        <a href="/profile" class="btn btn-primary">Profile</a>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>